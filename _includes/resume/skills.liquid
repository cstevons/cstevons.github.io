<ul class="card-text font-weight-light list-group list-group-flush">
  <style>
    ul.items {
      padding-left: 0;
      list-style-position: inside;
      font-size: 0.95rem
    }
    ul.items li {
      margin-left: 0;
      padding-left: 0px;
      text-indent: -22px
    }
  </style>
  {% for content in data[1] %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ content.topic }} </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url }}">{{ content.header }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-weight: bold">{{ content.items }}</h6>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>